@page
@model student_profile.Pages.Profiles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Student Profiles</h1>

<p>
    <a asp-page="Create">Add new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].CivilStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Class) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CivilStatus)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
